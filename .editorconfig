# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.php]
indent_style = space

[Makefile]
indent_style = tab

[Dockerfile]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.xml]
indent_style = space
indent_size = 4
