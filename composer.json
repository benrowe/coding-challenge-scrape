{
    "name": "benrowe/coding-challenge-scrape",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "squizlabs/php_codesniffer": "^3.13",
        "slevomat/coding-standard": "^8.20",
        "php-collective/code-sniffer": "^0.2.19"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ben Rowe"
        }
    ],
    "scripts": {
        "dx": [
            "@lint",
            "@test:coverage"
        ],
        "test": "phpunit",
        "test:coverage:html": "phpunit --coverage-html build/coverage",
        "test:coverage": [
            "phpunit --coverage-clover build/clover.xml",
            "coverage-check build/clover.xml 100"
        ],
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
